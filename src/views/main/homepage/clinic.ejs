<% extend("../app.ejs") %>
    <section class="detail-nav">
        <div class="container">
            <div class="container">
                <div class="row">
                    <div class="col-2">
                        <div class="menu-title text-decoration-none">
                            <a href="/" class="text-decoration-none">
                                <img class="menu-nav" src="/images/background/smile.png" alt="img logo">
                                <span class="text-decoration-none">CareLink </span>
                            </a>
                        </div>
                    </div>
                    <div class="col-8 d-flex flex-row justify-content-center align-self-center menu-type">
                        <span class="d-block"><a href="/" class="text-decoration-none">Trang chủ</a></span>
                        <span class="d-block mx-5"><a href="/for-patients" class="text-decoration-none">Cho bệnh
                                nhân</a></span>
                        <span class="d-block"><a href="/for-doctors" class="text-decoration-none">Cho bác sĩ</a></span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="detail-info-specialization">
        <div class="container">
            <div class="container">
                <div class="row">
                    <div class="col-12 mt-3">
                        <a class="text-decoration-none" href="/">Trang chủ </a><span aria-hidden="true">&raquo;</span>
                        <span style="text-transform: uppercase">
                            <%= clinic.name %>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <section class="detail-info-clinic mt-3">
        <div class="container">
            <div class="container">
                <div class="row d-flex flex-row">
                    <div class="nav flex-column nav-pills col-4" id="v-pills-tab" role="tablist"
                        aria-orientation="vertical">
                        <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home"
                            role="tab" aria-controls="v-pills-home" aria-selected="true">LỊCH KHÁM</a>
                        <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile"
                            role="tab" aria-controls="v-pills-profile" aria-selected="false">GIỚI THIỆU</a>
                        <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages"
                            role="tab" aria-controls="v-pills-messages" aria-selected="false">KHÁM CHỮA VÀ ĐIỀU TRỊ</a>
                    </div>
                    <div class="tab-content col-8" id="v-pills-tabContent">
                        <div class="tab-pane fade show active col-12" id="v-pills-home" role="tabpanel"
                            aria-labelledby="v-pills-home-tab">
                            <div class="row">
                                <div class="col-12 content-specialization">
                                    <% doctors.forEach(function(doctor) { %>
                                        <div class="d-flex flex-row each-doctor-spe">
                                            <div class="left-content col-5 d-flex">
                                                <div class="avatar-doctor-spe">
                                                    <img src="/images/users/<%= doctor.User.avatar %>">
                                                </div>
                                                <div class="intro-doctor-spe">
                                                    <div class="doctor-name">
                                                        <%= doctor.User.name %>
                                                    </div>
                                                    <div class="doctor-address">
                                                        <%= doctor.User.address %>
                                                    </div>
                                                    <div><a href="/detail/doctor/<%= doctor.User.id %>">Thông tin
                                                            thêm...</a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="right-content col-7" id="clinicRightContent">
                                                <div>
                                                    <div class="row header-booking">
                                                        <label for="day-book-spe" class="label-booking">LỊCH
                                                            KHÁM</label>
                                                    </div>
                                                    <select id="day-book-spe" class="form-control doctor-schedule-spe"
                                                        data-doctor="<%= doctor.User.id %>">
                                                        <% sevenDaySchedule.forEach(function(day) { %>
                                                            <option value="<%= day %>">
                                                                <%= day %>
                                                            </option>
                                                            <% }) %>
                                                    </select>
                                                </div>
                                                <div id="div-schedule-<%= doctor.User.id %>"
                                                    data-doctor-id="<%= doctor.User.id %>"
                                                    class=" d-flex flex-row  flex-wrap text-decoration-none">
                                                    <% if(doctor.getDataValue('schedules').length===0){ %>
                                                        <div class="no-schedule">
                                                            Bác sĩ "<%= doctor.User.name %>" không có lịch khám vào
                                                                <b>
                                                                    <%= sevenDaySchedule[0] %>
                                                                </b>. Vui lòng chọn lịch khám tiếp theo.
                                                        </div>
                                                        <% } %>
                                                            <% doctor.getDataValue('schedules').forEach( function(x,
                                                                index) { %>

                                                                <% if(x.getDataValue("isDisable")===false) { %>
                                                                    <div id="spe-btn-modal-<%= x.id %>"
                                                                        data-doctor-id="<%= doctor.User.id %>"
                                                                        data-date="<%= x.date %>"
                                                                        data-time="<%= x.time %>"
                                                                        class="text-decoration-none show-modal-at-clinic-page">
                                                                        <div class="doctor-time">
                                                                            <%= x.time %>
                                                                        </div>
                                                                    </div>
                                                                    <% } %>

                                                                        <% if(
                                                                            index===doctor.getDataValue('schedules').length
                                                                            - 1 && x.getDataValue("isDisable")===true){
                                                                            %>
                                                                            <div>
                                                                                Không có lịch khám trong thời gian hiện
                                                                                tại. Vui lòng chọn lịch khám tiếp theo.
                                                                            </div>
                                                                            <% } %>
                                                                                <% }) %>
                                                </div>
                                                <div id="div-more-info-<%= doctor.User.id %>">
                                                    <% if(doctor.getDataValue('schedules').length> 0){ %>
                                                        <div class="d-flex flex-column">
                                                            <div>
                                                                <span class="d-block mt-2"> Chọn <i
                                                                        class="fa fa-hand-o-up" aria-hidden="true"></i>
                                                                    và đặt lịch tư vấn miễn phí</span>
                                                            </div>
                                                            <div style="border-top: 1px solid #ccc"
                                                                class="d-flex flex-column">
                                                                <span class="d-block pt-3 pb-1"
                                                                    style="text-transform: uppercase">Địa chỉ y
                                                                    tế:</span>
                                                                <span class="d-block pb-1"
                                                                    style="border-bottom: 1px solid #ccc">
                                                                    <%= doctor.User.address %>
                                                                </span>
                                                            </div>
                                                            <span class="d-block pt-2">Giá: 300.000 VND</span>
                                                        </div>
                                                        <% } %>
                                                </div>
                                            </div>
                                        </div>
                                        <% }) %>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="v-pills-profile" role="tabpanel"
                            aria-labelledby="v-pills-profile-tab">
                            <%- clinic.introductionHTML %>
                        </div>
                        <div class="tab-pane fade" id="v-pills-messages" role="tabpanel"
                            aria-labelledby="v-pills-messages-tab">
                            <pre><%= clinic.description %></pre>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="modal fade " tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true"
        id="modalBookingClinicDoctor">
        <div class="modal-dialog mw-100 w-75" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Đặt lịch khám</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-5" style="border-right: 1px solid #ccc;" id="infoDoctorSpe">
                            <label class="text-label" style="padding-top: 7px">Thông tin bác sĩ:</label>
                            <div class="d-flex flex-row">
                                <img class="avatar-doctor-modal" id="modal-avatar-doctor-spe">
                                <div class="ml-3">
                                    <span class="d-block" id="doctor-name-spe"></span>
                                    <div class="time-booking" id="time-patient-booking"></div>
                                    <div class="time-booking" id="date-patient-booking"></div>
                                </div>
                            </div>

                            <div class="mt-4" id="doctor-address-spe">
                            </div>
                            <div class="mt-3">Tư vấn miễn phí</div>
                            <div class="mt-3">Giá: 50 USD</div>
                        </div>
                        <div class="col-7">
                            <form id="form-patient-info-spe">
                                <div class="form-group">
                                    <label for="patient-name" class="col-form-label text-label">Thông tin bệnh
                                        nhân:</label>
                                    <input type="text" class="form-control" id="patient-name" name="patient_name"
                                        placeholder="Họ và tên" required>
                                </div>
                                <div class="form-group">
                                    <label for="patient-phone" class="col-form-label text-label">Số điện thoại:</label>
                                    <input type="text" class="form-control" id="patient-phone" name="patient_phone"
                                        placeholder="Số điện thoại" required>
                                </div>
                                <div class="form-group">
                                    <label for="patient-email" class="col-form-label text-label">Email:</label>
                                    <input type="text" class="form-control" id="patient-email" name="patient_email"
                                        placeholder="Email" required>
                                </div>
                                <div class="form-group">
                                    <label for="patient-sex" class="col-form-label text-label">Giới tính:</label>
                                    <select id="patient-sex" class="form-control" required>
                                        <option value="0">Nam</option>
                                        <option value="1">Nữ</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="patient-address" class="col-form-label text-label">Địa chỉ:</label>
                                    <textarea id="patient-address" name="patient_address" rows="3" class="form-control"
                                        placeholder="Địa chỉ" required></textarea>
                                </div>
                                <button type="submit" id="btn-save-patient-info-spe" class="btn btn-primary">
                                    Đặt lịch khám
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
